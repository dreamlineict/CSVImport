<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="~/Content/MvcGrid/mvc-grid.css" rel="stylesheet">
    <link href="@Url.Content("~/Content/alertifyjs/themes/default.min.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Content/alertifyjs/alertify.min.css")" rel="stylesheet" />

    <script src="@Url.Content("~/Scripts/jquery-3.4.1.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/alertify.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        //override defaults
        alertify.defaults.glossary.title = 'Response';
        alertify.defaults.transition = "slide";
        alertify.defaults.theme.ok = "btn btn-primary";
        alertify.defaults.theme.cancel = "btn btn-danger";
        alertify.defaults.theme.input = "form-control";
    </script>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-sm-2">
            <div class="row">
                <div class="col-sm-12">
                    @Html.ActionLink("Import File", "ImportFile", "Import")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.ActionLink("View Imports", "ImportView", "Import")
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    @Html.ActionLink("Report", "Report", "Import")
                </div>
            </div>
        </div>
        <div class="col-sm-10">
            <div class="container body-content">
                @RenderBody()
                <script src="~/Scripts/MvcGrid/mvc-grid.js"></script>
                <script>
                    [].forEach.call(document.getElementsByClassName('mvc-grid'), function (element) {
                        new MvcGrid(element);
                    });
                </script>
                <hr />
                <footer>
                    <p>&copy; @DateTime.Now.Year - Bitventure Demo</p>
                </footer>
            </div>
        </div>
    </div>
    
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
